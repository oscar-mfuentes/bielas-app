<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="@color/primary"
    android:id="@+id/loginLayout">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/loginUserLayout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="150dp"
        android:theme="@style/LoginLayoutUserInput">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/loginUserInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/user_name"
            android:theme="@style/LoginUserInput" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/loginPasswdLayout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:theme="@style/LoginLayoutPasswdInput">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/loginPasswdInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/passwd"
            android:theme="@style/LoginPasswdInput"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>